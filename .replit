modules = ["nodejs-20", "python-3.12", "web"]
run = "cd frontend && npm start"

[nix]
channel = "stable-25_05"
packages = ["pgadmin4"]

[deployment]
run = ["sh", "-c", "python3 manage.py runserver 0.0.0.0:3000"]

[workflows]
runButton = "Run Full Stack"

[[workflows.workflow]]
name = "Run Django Server"
author = 41254074
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py runserver 0.0.0.0:5000"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80
