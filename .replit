modules = ["nodejs-20", "python-3.12", "web"]
run = "cd frontend && npm start"

[nix]
channel = "stable-25_05"
packages = ["pgadmin4"]

[deployment]
run = ["sh", "-c", "python3 manage.py runserver 0.0.0.0:3000"]

[workflows]
runButton = "Start Email App"

[[workflows.workflow]]
name = "Run Django Server"
author = 41254074
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py runserver 0.0.0.0:5000"

[[workflows.workflow]]
name = "Run Full Stack"
author = 41254074
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py migrate && python manage.py runserver 0.0.0.0:5000"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && HOST=0.0.0.0 PORT=3000 BROWSER=none DANGEROUSLY_DISABLE_HOST_CHECK=true npm start"

[[workflows.workflow]]
name = "Run with Docker"
author = 41254074
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "docker-compose up --build"

[[workflows.workflow]]
name = "Run Full Application"
author = 41254074
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py migrate && python manage.py runserver 0.0.0.0:5000"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && HOST=0.0.0.0 PORT=3000 BROWSER=none DANGEROUSLY_DISABLE_HOST_CHECK=true npm start"

[[workflows.workflow]]
name = "Restart Full Application"
author = 41254074
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py migrate && python manage.py runserver 0.0.0.0:5000"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && REACT_APP_API_URL=http://0.0.0.0:5000 HOST=0.0.0.0 PORT=3000 BROWSER=none DANGEROUSLY_DISABLE_HOST_CHECK=true npm start"

[[workflows.workflow]]
name = "Fresh Start Application"
author = 41254074
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py migrate"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py runserver 0.0.0.0:5000 &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 3"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && BROWSER=none DANGEROUSLY_DISABLE_HOST_CHECK=true npm start"

[[workflows.workflow]]
name = "Start Email App"
author = 41254074
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py migrate && python manage.py runserver 0.0.0.0:5000"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && PROXY_URL=http://0.0.0.0:5000 HOST=0.0.0.0 PORT=3000 BROWSER=none npm start"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80
